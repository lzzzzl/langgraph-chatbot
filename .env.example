# 应用配置
APP_NAME="LangGraph Chatbot"
APP_VERSION="1.0.0"
ENVIRONMENT="development"  # development, staging, production
DEBUG=true
LOG_LEVEL="INFO"

# API 服务
API_HOST="0.0.0.0"
API_PORT=8000
API_WORKERS=4
CORS_ORIGINS="http://localhost:3000,http://localhost:8080"

# LLM 配置
OPENAI_API_KEY="sk-..."
ANTHROPIC_API_KEY="sk-ant-..."
LLM_PROVIDER="openai"  # openai, anthropic, azure
LLM_MODEL="gpt-4-turbo-preview"
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# Redis 配置
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=""
REDIS_URL="redis://localhost:6379/0"

# 数据库配置
DATABASE_URL="postgresql+asyncpg://user:password@localhost:5432/chatbot"
# DATABASE_URL="sqlite+aiosqlite:///./data/chatbot.db"  # SQLite 开发用

# 会话配置
SESSION_EXPIRE_HOURS=24
MAX_MESSAGE_HISTORY=50

# 安全配置
SECRET_KEY="your-secret-key-here-change-in-production"
JWT_ALGORITHM="HS256"
JWT_EXPIRE_MINUTES=1440

# 工具配置（按需）
TAVILY_API_KEY=""  # 搜索工具
SERPER_API_KEY=""  # Google 搜索

# 向量存储配置（可选）
VECTOR_STORE_TYPE="chromadb"  # chromadb, faiss, pinecone
CHROMA_PERSIST_DIR="./data/chroma"

# 监控配置
LANGSMITH_API_KEY=""  # LangSmith 追踪
LANGSMITH_PROJECT="langgraph-chatbot"