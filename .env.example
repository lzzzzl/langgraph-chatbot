# ==================== 应用配置 ====================
APP_NAME=LangGraph Chatbot
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true

# ==================== LLM 配置 ====================
LLM_DEFAULT_PROVIDER=openrouter
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4096
LLM_TIMEOUT=60
LLM_MAX_RETRIES=3

# OpenAI
LLM_OPENAI_API_KEY=your-openai-api-key
LLM_OPENAI_MODEL=gpt-4o
LLM_OPENAI_BASE_URL=

# Anthropic
LLM_ANTHROPIC_API_KEY=your-anthropic-api-key
LLM_ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# OpenRouter
LLM_OPENROUTER_API_KEY=your-openrouter-api-key
LLM_OPENROUTER_MODEL=anthropic/claude-3.5-sonnet
LLM_OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# ==================== Redis 配置 ====================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=password
REDIS_MAX_CONNECTIONS=10
REDIS_SESSION_TTL=3600
REDIS_CACHE_TTL=300

# ==================== 数据库配置 ====================
DB_TYPE=sqlite
DB_SQLITE_PATH=data/chatbot.db

# PostgreSQL (如果使用)
# DB_TYPE=postgresql
# DB_HOST=localhost
# DB_PORT=5432
# DB_USERNAME=postgres
# DB_PASSWORD=your-password
# DB_DATABASE=chatbot
# DB_POOL_SIZE=5
# DB_MAX_OVERFLOW=10

# ==================== 检查点配置 ====================
CHECKPOINT_TYPE=sqlite
CHECKPOINT_SQLITE_PATH=data/checkpoints/checkpoints.db
CHECKPOINT_SAVE_INTERVAL=1
CHECKPOINT_MAX_CHECKPOINTS=10

# ==================== 向量存储配置 ====================
VECTOR_STORE_TYPE=chroma
VECTOR_CHROMA_PERSIST_DIR=data/chroma
VECTOR_EMBEDDING_PROVIDER=openai
VECTOR_EMBEDDING_MODEL=text-embedding-3-small
VECTOR_TOP_K=5
VECTOR_SCORE_THRESHOLD=0.7

# ==================== API 配置 ====================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_SECRET_KEY=your-secret-key-change-in-production
API_ALGORITHM=HS256
API_ACCESS_TOKEN_EXPIRE_MINUTES=30
API_CORS_ORIGINS=["*"]
API_MAX_REQUEST_SIZE=10485760
API_REQUEST_TIMEOUT=300

# ==================== 日志配置 ====================
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_DIR=data/logs
LOG_FILE_NAME=chatbot.log
LOG_ROTATION=1 day
LOG_RETENTION=30 days

# ==================== 监控配置 ====================
MONITORING_ENABLE_LANGSMITH=false
MONITORING_LANGSMITH_API_KEY=your-langsmith-api-key
MONITORING_LANGSMITH_PROJECT=langgraph-chatbot
MONITORING_ENABLE_PROMETHEUS=false
MONITORING_PROMETHEUS_PORT=9090